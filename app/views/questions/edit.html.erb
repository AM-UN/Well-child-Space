<%= form_with model: @question, local: true do |form| %>
  <%= form.label :question_content, "相談内容" %>
  <%= form.text_area :question_content, autofocus: true %>

　<%= form.label :question_image, "画像をアップロード" %>
  <%= form.file_field :question_image %>

  <%= form.submit "投稿する" %>
  
<% end %>

