<div class="container">
  <%= render 'layouts/error_messages', model: @question %>

  <%= form_with model: @question, local: true do |form| %>

    <div class="question-content">
      <%= form.text_area :question_content, placeholder:"相談内容", rows:8 %>
    </div>

    <div class="question-image">
      <div class="label-text">
      　<%= form.label :question_image, "画像をアップロード" %>
        <%= form.file_field :question_image %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit "投稿する", class: "button" %>
    </div>

  <% end %>
</div>